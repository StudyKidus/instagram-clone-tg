
<%- include("./config/head", { title: "Confirm Email | Instagram"}) %>

<body class="w-full h-screen sm:bg-gray-50">
    <div class="cont w-full h-full flex flex-col justify-center sm:items-center gap-y-4">
        <form class="w-full bg-white grid px-3 sm:px-6 py-8 gap-y-3 sm:text-sm sm:gap-y-2 sm:w-[350px] sm:border sm:border-gray-200 sm:shadow-sm sm:shadow-blue-100">

            <!-- confirm title -->
            <h1 class="text-3xl font-semibold text-center mt-4">Confirm Your Email</h1>

            <!-- instruction -->
            <p class="my-2 text-center text-gray-500">Enter the code we sent to <span class="underline">example@gmail.com</span> <button class="text-blue-600 font-semibold">Resend code</button></p>

            <!-- Confirmation code field -->
            <div class="w-full">
                <input class="h-12 outline-blue-600 sm:h-9 bg-gray-50 w-full border border-gray-300 px-2 rounded-sm" type="number" name="" id="" placeholder="Confirmation code">
            </div>

            <!-- login btn -->
            <button class="bg-blue-300 w-full text-white py-2 rounded-sm sm:py-1">Confirm</button>            

            <!-- go back btn -->
            <p class="text-blue-600 font-semibold text-center">
                <a  href="/signup">Go Back</a>
            </p>

            <!-- terms and policy -->
            <p class="text-center text-gray-500 text-sm">by signing in you have agreed to our <a class="text-blue-400 hover:underline" href="#">Terms</a>, <a class="text-blue-400 hover:underline" href="#">Data policy</a> and <a class="text-blue-400 hover:underline" href="#">Cookies policy</a>.</p>

        </form>

        <div class="w-full text-center py-4 sm:border sm:border-gray-300 sm:w-[350px] sm:shadow-sm sm:shadow-blue-100">
            <p>Have an account? <a class="text-blue-400 font-semibold" href="/login">Login</a></p>
        </div>
    </div>
</body>
</html>